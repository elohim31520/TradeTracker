{
    "compilerOptions": {
        "target": "esnext",
        "module": "CommonJS",
        "allowJs": true,
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "typeRoots": ["./node_modules/@types", "./src/types"],
        "lib": ["ES2020"]
    },
    "include": ["src/**/*.ts", "src/types/**/*.d.ts"],
    "exclude": ["node_modules", "dist"]
}