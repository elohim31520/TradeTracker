{
    "compilerOptions": {
        "target": "esnext",
        "module": "CommonJS",
        "allowJs": true,
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "lib": ["ES2020"],
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ]
    },
    "ts-node": {
        "files": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.js",
        "src/types/**/*.d.ts",
        "app.ts",
        "cronjob.ts",
        "models/**/*.js",
        "config/**/*.js"
    ],
    "exclude": ["node_modules", "dist"]
}